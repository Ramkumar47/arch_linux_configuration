# i3blocks configuration file
# The dependencies for each block si described in each script directory.


# Global properties
separator=true
separator_block_width=15

[iface]
command=iface/iface
color=#00FF00
interval=10

[cpu_usage]
command=cpu_usage/cpu_usage
interval=10
LABEL=CPU :
# min_width=CPU:
T_WARN=50
T_CRIT=80
DECIMALS=1

[volume]
command=volume/volume
LABEL=VOL :
interval=once
signal=10
STEP=5%

[memory]
command=memory/memory
label=Memory :
interval=10

[disk]
command=disk/disk
LABEL=ROOT :
DIR=/
ALERT_LOW=10
interval=30

[disk]
command=disk/disk
LABEL=HOME :
# DIR=$HOME
ALERT_LOW=10
interval=30

[time]
command=date '+%Y-%h-%d %_I:%M:%S %p'
interval=1
