; custom Modules ------------------------------------

[module/DateModule]
type = custom/script
format = <label>
format-background = #474747
format-underline = #0a6cf5
exec = date
click-left = gsimplecal
interval = 1

[module/StorageModule]
type = custom/script
format = <label>
format-prefix = "💽: "
format-prefix-foreground = $(colors.foreground-alt)
label-foreground = $(colors.foreground)
format-underline = #345678
exec = df -h | awk '$6 == "/"{print $5}'
interval = 300
click-left = notify-send -u low "$(df -h | awk -f $HOME/.config/polybar/storage.awk)"

[module/ArchModule]
type = custom/ipc
hook-0 = urxvt --hold -e neofetch
format = "%{F#0000ff}"
click-left = polybar-msg hook ArchModule 1

[module/MemoryModule]
type = custom/script
format = <label>
label = %output%
format-prefix = "﬙ "
format-foreground = $(colors.foreground)
format-underline = #f99804
label-foreground = $(colors.foreground)

exec = $HOME/.config/polybar/polybarFunctions.sh memoryModule
interval = 10
click-left = $HOME/.config/polybar/polybarFunctions.sh showMIP

[module/CPUModule]
type = custom/script
format = <label>
label = %output%
format-prefix = "🖥"
format-foreground = $(colors.foreground)
format-underline = #ff540b
label-foreground = $(colors.foreground)

exec = $HOME/.config/polybar/polybarFunctions.sh cpuModule
interval = 10
click-left = $HOME/.config/polybar/polybarFunctions.sh showCIP

[module/WifiModule]
type = custom/script
format = <label>
label = %output%
exec = $HOME/.config/polybar/polybarFunctions.sh wirelessFunction
format-underline = #9f78e1

[module/CompositorModule]
type = custom/ipc
format = hi
hook-0 = $HOME/.config/polybar/polybarFunctions.sh CompositorToggler enable
hook-1 = $HOME/.config/polybar/polybarFunctions.sh CompositorToggler disable
click-left = polybar-msg hook CompositorModule 1
click-right = polybar-msg hook CompositorModule 2
initial = 1
