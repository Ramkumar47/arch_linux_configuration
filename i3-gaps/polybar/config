ramp-signal-0 = 10%
ramp-signal-1 = 20%
ramp-signal-2 = 30%
ramp-signal-3 = 40%
ramp-signal-4 = 50%
ramp-signal-5 = 60%
ramp-signal-6 = 70%
ramp-signal-7 = 80%
ramp-signal-8 = 90%
ramp-signal-9 = 100%
ramp-signal-foreground = ${colors.foreground}

